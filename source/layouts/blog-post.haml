!!!
%html
    %head
        %meta{:charset => "utf-8"}/
        / Always force latest IE rendering engine or request Chrome Frame
        %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
        / Scale screen for mobile
        %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
        / Use title if it's in the page YAML frontmatter
        %title= current_page.data.title || "The Middleman"
        / Google Fonts
        %link{:href => "http://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900,100italic,300italic,400italic,500italic,700italic,900italic|Merriweather:400,300,700,900,300italic,400italic,700italic,900italic", :rel => "stylesheet", :type => "text/css"}/
        / Open Graph Data
        %meta{:content => "Sam Willis | Product Designer in London.", :property => "og:title"}/
        %meta{:content => "http://thesamwillis.com", :property => "og:url"}/
        %meta{:content => "http://thesamwillis.com/images/profile.png", :property => "og:image"}/
        / Styles
        = stylesheet_link_tag "style"
        / Font Awesome
        %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", :rel => "stylesheet"}/

    %body{:class => page_classes}

    = partial "partials/nav"

    .blog-post
        .page-header
            .container
                .row
                    .col-sm-12
                        %h1= current_page.data.title

        .post-content.section
            .container
                .row
                    .col-sm-8.col-sm-offset-2

                        = yield

                        %h3
                            %a.back{:href => "/"} &larr; Back to Home Page

    / Scripts
    = javascript_include_tag  "all"

    / Google Analytics
    :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-39709729-1', 'auto');
        ga('send', 'pageview');